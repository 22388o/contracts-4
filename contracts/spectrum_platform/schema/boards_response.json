{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BoardsResponse",
  "type": "object",
  "required": [
    "boards"
  ],
  "properties": {
    "boards": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/BoardInfo"
      }
    }
  },
  "definitions": {
    "BoardInfo": {
      "type": "object",
      "required": [
        "address",
        "weight"
      ],
      "properties": {
        "address": {
          "$ref": "#/definitions/HumanAddr"
        },
        "weight": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0.0
        }
      }
    },
    "HumanAddr": {
      "type": "string"
    }
  }
}
